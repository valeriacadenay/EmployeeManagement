@{
    ViewData["Title"] = "Panel de administración - Employee Management";
    Layout = null; // Quita esto si vas a usar _Layout.cshtml
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous">

    <!-- Tailwind (CDN, solo para prototipos) -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                Employee<span class="text-info">Management</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employees" asp-action="Index">Empleados</a>
                    </li>
                </ul>

                <div class="d-flex gap-2">
                    <a asp-controller="Account" asp-action="Login"
                       class="btn btn-outline-light px-3">
                        Iniciar sesión
                    </a>
                    <a asp-controller="Account" asp-action="Register"
                       class="btn btn-info text-white px-3">
                        Registrarse
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center g-4">
                <div class="col-md-6">
                    <h1 class="display-5 fw-bold mb-3 text-slate-900">
                        Administra tu talento humano de forma
                        <span class="text-info">simple y organizada</span>.
                    </h1>
                    <p class="lead text-slate-600 mb-4">
                        Employee Management te ayuda a gestionar empleados, vacaciones y procesos de RRHH
                        desde un solo lugar, con una interfaz clara y enfocada en la productividad.
                    </p>

                    <div class="d-flex flex-wrap gap-3">
                        <!-- Botón principal: Iniciar sesión -->
                        <a asp-controller="Account" asp-action="Login"
                           class="btn btn-primary btn-lg shadow-sm
                                  px-4 py-2
                                  inline-flex items-center gap-2
                                  rounded-xl">
                            <span class="fw-semibold">Iniciar sesión</span>
                            <span class="text-sm opacity-75">Acceder al panel</span>
                        </a>

                        <!-- Botón secundario: Registrarse -->
                        <a asp-controller="Account" asp-action="Register"
                           class="btn btn-outline-secondary btn-lg
                                  px-4 py-2 rounded-xl">
                            Crear una cuenta
                        </a>
                    </div>

                    <p class="mt-3 text-sm text-slate-500">
                        ¿Primera vez aquí? Regístrate, y tu cuenta será creada y confirmada por correo.
                    </p>
                </div>

                <div class="col-md-6">
                    <div class="bg-white rounded-3 shadow-sm p-4 md:p-6">
                        <h2 class="h5 fw-bold mb-3 text-slate-800">
                            Resumen rápido
                        </h2>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div class="rounded-2 p-3 bg-slate-50 border border-slate-100">
                                <p class="text-xs text-slate-500 mb-1">Empleados activos</p>
                                <p class="h4 fw-bold text-slate-900">120</p>
                            </div>
                            <div class="rounded-2 p-3 bg-slate-50 border border-slate-100">
                                <p class="text-xs text-slate-500 mb-1">En vacaciones</p>
                                <p class="h4 fw-bold text-slate-900">8</p>
                            </div>
                            <div class="rounded-2 p-3 bg-slate-50 border border-slate-100">
                                <p class="text-xs text-slate-500 mb-1">Nuevos este mes</p>
                                <p class="h4 fw-bold text-slate-900">5</p>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <ul class="list-unstyled space-y-2">
                            <li class="d-flex align-items-start gap-2">
                                <span class="badge bg-success mt-1">✔</span>
                                <span class="text-sm text-slate-700">
                                    Gestiona la información de empleados y contratos.
                                </span>
                            </li>
                            <li class="d-flex align-items-start gap-2">
                                <span class="badge bg-success mt-1">✔</span>
                                <span class="text-sm text-slate-700">
                                    Controla vacaciones, ausencias y días libres.
                                </span>
                            </li>
                            <li class="d-flex align-items-start gap-2">
                                <span class="badge bg-success mt-1">✔</span>
                                <span class="text-sm text-slate-700">
                                    Accede desde cualquier dispositivo con tu usuario y contraseña.
                                </span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer simple -->
    <footer class="border-top py-3 bg-white">
        <div class="container d-flex flex-wrap justify-content-between align-items-center gap-2">
            <span class="text-muted text-sm">
                © @DateTime.Now.Year Employee Management. Todos los derechos reservados.
            </span>
            <span class="text-muted text-sm">
                Panel de administración de RRHH.
            </span>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>
</html>
